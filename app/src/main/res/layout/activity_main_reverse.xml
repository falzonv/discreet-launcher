<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/spacing_small"
        android:visibility="gone"
        android:background="@color/for_overlay"/>

    <TextView
        android:id="@+id/target_applications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/target_open_apps"
        android:visibility="gone"
        tools:visibility="visible"
        style="@style/TouchTarget"/>

    <RelativeLayout
        android:id="@+id/home_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible">

        <com.vincent_falzon.discreetlauncher.ViewClock
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <View
                android:id="@+id/info_touch_targets"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/target_favorites"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/target_open_favorites"
                        android:visibility="gone"
                        tools:visibility="visible"
                        style="@style/TouchTarget"/>

                    <ImageView
                        android:id="@+id/access_menu_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="@dimen/spacing_large"
                        android:src="@drawable/background_menu_button"
                        android:contentDescription="@string/menu"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/favorites"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/for_overlay"
                        android:paddingHorizontal="@dimen/spacing_small"
                        tools:layoutManager="GridLayoutManager"
                        tools:spanCount="4"
                        tools:listitem="@layout/view_application"/>

                    <TextView
                        android:id="@+id/info_no_favorites_yet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/spacing_large"
                        android:gravity="center"
                        android:text="@string/hint_no_favorites_yet"
                        android:textColor="@color/for_text_on_overlay"
                        android:background="@color/for_overlay"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/default_launcher_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/spacing_normal"
                        android:gravity="center"
                        android:text="@string/set_as_default_launcher"
                        android:textColor="@color/for_buttons_and_controls"
                        android:background="@color/for_notification_background"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>